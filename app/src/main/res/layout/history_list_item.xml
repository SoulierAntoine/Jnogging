<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/run_history_padding_vertical"
    android:paddingTop="@dimen/run_history_padding_vertical"
    android:paddingLeft="@dimen/run_history_padding_horizontal"
    android:paddingRight="@dimen/run_history_padding_horizontal"
    android:background="@drawable/list_item_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/run_history_margin_to_parent"
        android:layout_marginStart="@dimen/run_history_margin_to_parent"
        android:layout_marginTop="@dimen/run_history_margin_to_parent">

        <TextView
            android:id="@+id/tv_distance"
            tools:text="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/run_history_text_size" />

        <TextView
            android:id="@+id/tv_label_distance"
            tools:text="km"
            android:text="@string/label_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/run_history_label_size"
            app:layout_constraintLeft_toRightOf="@+id/tv_distance"
            android:layout_marginLeft="@dimen/run_history_margin_to_value"
            android:layout_marginStart="@dimen/run_history_margin_to_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_distance"
        app:layout_constraintRight_toLeftOf="@+id/ll_speed"
        android:layout_marginTop="@dimen/run_history_margin_to_parent"
        app:layout_constraintHorizontal_bias="0.15">
        
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="60"
            android:textSize="@dimen/run_history_text_size"/>
        <TextView
            android:id="@+id/tv_label_time"
            tools:text="min"
            android:text="@string/label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/run_history_label_size"
            app:layout_constraintLeft_toRightOf="@+id/tv_time"
            android:layout_marginLeft="@dimen/run_history_margin_to_value"
            android:layout_marginStart="@dimen/run_history_margin_to_value" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/run_history_margin_to_parent"
        android:layout_marginEnd="@dimen/run_history_margin_to_parent"
        android:layout_marginTop="@dimen/run_history_margin_to_parent">
        
        <TextView
            android:id="@+id/tv_speed"
            tools:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/run_history_text_size"/>

        <TextView
            android:id="@+id/tv_label_speed"
            tools:text="km/h"
            android:text="@string/label_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/run_history_label_size"
            app:layout_constraintLeft_toRightOf="@+id/tv_speed"
            android:layout_marginLeft="@dimen/run_history_margin_to_value"
            android:layout_marginStart="@dimen/run_history_margin_to_value" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>